---
import { minify } from 'terser';
import { Astronav, MenuItems, OpenIcon, CloseIcon } from 'astro-navbar';
import { getAnchor } from '../configs/navigation.js';
import Logo from '../assets/logo-light-sm.svg?raw';
import NavClose from '../assets/icons/close.svg?raw';
import NavOpen from '../assets/icons/hamburger.svg?raw';
import NavList from './common/NavList.astro';
import navigation from '../scripts/navigation.js?raw';

const navigationMin = await minify(navigation, { mangle: { toplevel: true } });
const homeAnchor = getAnchor('home');
---

<header id="main-header" class="main-header">
  <Astronav>
    <div class="navbar">
      <a
        href={`#${homeAnchor}`}
        aria-label="Logo Provodínská Štrapanda"
        class="logo-link"
        style="display: flex;"
      >
        <Fragment set:html={Logo} />
      </a>
      <button id="astronav-menu" class="nav-toggler" aria-label="Navigace webu">
        <OpenIcon>
          <Fragment set:html={NavOpen} />
        </OpenIcon>
        <CloseIcon>
          <Fragment set:html={NavClose} />
        </CloseIcon>
      </button>
    </div>
    <MenuItems class="nav hidden">
      <NavList class="main-nav-list" />
    </MenuItems>
  </Astronav>
  <script set:html={navigationMin.code}></script>
</header>
<style>
  :root {
    --mainHeaderPadding: var(--s2);
  }
  @media screen and (min-width: 64rem) {
    :root {
      --mainHeaderPadding: var(--s4);
    }
  }
  .main-header {
    position: fixed;
    z-index: 10;
    top: 0;
    width: 100%;
    padding: var(--mainHeaderPadding);
  }
  .main-header.open {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    background-color: #000000dd;
    backdrop-filter: blur(4px);
  }
  .navbar {
    display: flex;
    gap: var(--s6);
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 5;
  }

  .nav {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 4;
    display: flex;
    align-items: center;
    justify-content: center;
    overscroll-behavior-y: contain;
    overflow-y: auto;
  }
  .main-nav-list {
    text-align: center;
    flex-direction: column;
    gap: var(--s4);
  }

  .nav-toggler,
  .logo-link {
    color: var(--colorText);
    cursor: pointer;
  }
  .nav-toggler:hover,
  .logo-link:hover {
    color: var(--interactionPrimaryColorHover);
  }
  .nav-toggler:focus-visible,
  .logo-link:focus-visible {
    outline: none;
    color: var(--interactionPrimaryColorFocus);
  }
  .nav-toggler:active,
  .logo-link:active {
    color: var(--interactionPrimaryColorActive);
  }
</style>
<style is:global>
  :root {
    --logoSize: 2.5rem;
    --logoTextDisplay: none;
  }
  @media screen and (min-width: 64rem) {
    :root {
      --logoTextDisplay: block;
    }
  }
  .logo {
    height: var(--logoSize);
  }
  .logo-text {
    display: var(--logoTextDisplay);
  }

  .main-header.open .logo-text {
    display: block;
  }
  .nav-toggler {
    height: var(--logoSize);
  }
  .navbar-toggler-icon {
    height: var(--logoSize);
    width: var(--logoSize);
  }
  .main-nav-list .nav-list-item {
    font-size: var(--fontSizes60);
  }
</style>
